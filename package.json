{
  "name": "mcj-worship-app",
  "version": "1.0.0",
  "description": "Sistema de gestão para ministério de louvor",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "vercel-build": "npm run install-client && npm run build",
    "render-build": "npm install && cd client && npm install && npm run build",
    "supabase:migrate": "node supabase/migration.js",
    "supabase:install": "npm install @supabase/supabase-js && cd client && npm install @supabase/supabase-js",
    "start": "node server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^24.16.2",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "worship",
    "ministry",
    "schedule",
    "repertoire"
  ],
  "author": "MCJ Ministry",
  "license": "MIT"
}
